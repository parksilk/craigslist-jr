<h2>Create your new post:</h2>
<form action="/post/new" method="post">

  <select name='category_id'>
    <option value="" disabled="disabled" selected="selected">Please select a category</option>
    <option value="1">Boats</option>
    <option value="2">Cars</option>
    <option value="3">Personals</option>
    <option value="4">TVs</option>
  </select>

  <br><br>
  <input type='text' name='title' placeholder ='Title' autofocus='autofocus'/><br><br>
  <input type='text' name='price' placeholder ='Price' />
  <br><br>
  <textarea name= 'description' placeholder='Type your description here'></textarea>
  <br><br>
  <input type = 'submit' value = 'Submit'>
</form>
